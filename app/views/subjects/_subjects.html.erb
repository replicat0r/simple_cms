
  <table class="listing table-bordered table" summary="Subject list">
    <div><%= pluralize(@subjects.size, 'subject') %> found</div>

    <tr class="header">
      <th>&nbsp;</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>

        <% @subjects.each do |subject| %>
    <tr class="<%= cycle('odd', 'even') %> ">
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= status_tag(subject.visible) %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => subject.id,:remote => true}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => subject.id,:remote => true}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'destroy', :id => subject.id, method: :delete}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>