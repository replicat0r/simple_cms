<table summary="Section form fields">
  <tr>
    <th><%= f.label(:page_id) %></th>
    <td><%= f.text_field(:page_id) %></td>
  </tr>
  <tr>
    <th><%= f.label(:name) %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position) %></th>
    <td><%= f.text_field(:position) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible) %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
  <tr>
    <th><%= f.label(:content_type) %></th>
    <td><%= f.radio_button(:content_type,"text") %> text
    <%= f.radio_button(:content_type,"html") %> html</td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= f.text_area(:content,:size=>'30x10') %></td>
  </tr>
</table>
