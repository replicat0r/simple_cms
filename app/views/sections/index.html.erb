<div class="notice">
<%= flash[:notice] %>
</div>
<div class="sections index">
  <h2>sections</h2>

  <%= link_to("Add New section", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="section list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>section</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td><%= section.position %></td>
      <td><%= section.name %></td>
                  <td class="center"><%= section.page_id %></td>

      <td class="center"><%= section.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= section.content %></td>

      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => section.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit',:id => section.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete',:id => section.id}, :class => 'action delete') %>

      </td>
    </tr>
    <% end %>
  </table>
</div>
  