<% @page_title = "New Page" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="pages new">
  <h2>Create Page</h2>

  <%= form_for(:page, :url => {:action => 'create'},:html=>{:class=>"col-sm-4"} ) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag("Create Page",:class=>"btn btn-default") %>
    </div>

  <% end %>
</div>
